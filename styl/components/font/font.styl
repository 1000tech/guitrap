/*
* 300
* ========================================================================== */
@font-face {
    font-family: 'OS';
    font-style: normal;
    font-weight: 300;
    src: local('Open Sans Light'), local('OpenSans-Light'),
            url('../fonts/os-300.woff') format('woff'),
            url('../fonts/os-300.ttf') format('truetype');
}
/* cyrillic */
@font-face {
    font-family: 'OS';
    font-style: normal;
    font-weight: 300;
    src: local('Open Sans Light'), local('OpenSans-Light'),
            url('../fonts/os-300-cyr.woff2') format('woff2');
    unicode-range: U+0400-045F, U+0490-0491, U+04B0-04B1, U+2116;
}
/* latin */
@font-face {
    font-family: 'OS';
    font-style: normal;
    font-weight: 300;
    src: local('Open Sans Light'), local('OpenSans-Light'),
            url('../fonts/os-300-lat.woff2') format('woff2');
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215;
}

